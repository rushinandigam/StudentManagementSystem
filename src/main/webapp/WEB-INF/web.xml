<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>StudentManagementSystem</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  
  
  <!-- student signup -->
    <servlet>
    <servlet-name>student_signup</servlet-name>
    <jsp-file>/jsp/Authentication/StudentSignup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>student_signup</servlet-name>
    	<url-pattern>/studentsignup</url-pattern>
    </servlet-mapping>
    
    
    
    <!-- student login -->
    <servlet>
    <servlet-name>student_login</servlet-name>
    <jsp-file>/jsp/Authentication/StudentSignin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>student_login</servlet-name>
    	<url-pattern>/studentlogin</url-pattern>
    </servlet-mapping>
    
    
    
    <!-- faculty login  -->
    <servlet>
    <servlet-name>facultyLogin</servlet-name>
    <jsp-file>/jsp/Authentication/FacultyLogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>facultyLogin</servlet-name>
    	<url-pattern>/facultylogin</url-pattern>
    </servlet-mapping>
    
    
    
    
    <!--  faculty sign up -->
    <servlet>
    <servlet-name>facultySignup</servlet-name>
    <jsp-file>/jsp/Authentication/FacultySignup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>facultySignup</servlet-name>
    	<url-pattern>/facultysignup</url-pattern>
    </servlet-mapping>
    
    
    
    
    <!-- admin login -->
    <servlet>
    <servlet-name>adminLogin</servlet-name>
    <jsp-file>/jsp/Authentication/AdminLogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>adminLogin</servlet-name>
    	<url-pattern>/adminlogin</url-pattern>
    </servlet-mapping>
    
    
    
    <!-- admin sign up  -->
    <servlet>
    <servlet-name>adminSignup</servlet-name>
    <jsp-file>/jsp/Authentication/AdminSignup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>adminSignup</servlet-name>
    	<url-pattern>/adminsignup</url-pattern>
    </servlet-mapping>
    
    <!--  error page -->
    <servlet>
    <servlet-name>errorpage</servlet-name>
    <jsp-file>/jsp/ErrorPages/ErrorPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>errorpage</servlet-name>
    	<url-pattern>/errorpage</url-pattern>
    </servlet-mapping>
    
    
    
    
    <!--  student dashboard page -->
    <servlet>
    <servlet-name>studentDashboard</servlet-name>
    <jsp-file>/jsp/dashboards/StudentDashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>studentDashboard</servlet-name>
    	<url-pattern>/studentdashboard</url-pattern>
    </servlet-mapping>
    
    
    
    <!--  faculty dashboard page -->
    <servlet>
    <servlet-name>facultyDashboard</servlet-name>
    <jsp-file>/jsp/dashboards/FacultyDashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>facultyDashboard</servlet-name>
    	<url-pattern>/facultydashboard</url-pattern>
    </servlet-mapping>
    
    
    
    <!--  admin dashboard page -->
    <servlet>
    <servlet-name>adminDashboard</servlet-name>
    <jsp-file>/jsp/dashboards/AdminDashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    	<servlet-name>adminDashboard</servlet-name>
    	<url-pattern>/admindashboard</url-pattern>
    </servlet-mapping>
</web-app>   